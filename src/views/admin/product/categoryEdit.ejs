<%- include("../../partials/head.ejs",{title:"Editar categoria"})  %> 
<%- include("../../partials/menuHeader.ejs")  %>  
<section class="contGeneral">
    <div class="listCategory">
        <form action="/category/<%= category.id %>/edit?_method=PUT" method="post" class="formEditCategory">
            <h3>Editar categoría - <%= category.name %> </h3>
            <label for="name">Nombre de la categoría</label>
            <input placeholder="Coloque el nombre de la categoría" name="name" value="<%= category.name %>" type="text" id="name" required>
            <input type="submit" value="Confirmar">
        </form>
    </div>
</section>
